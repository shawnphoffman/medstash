# MedStash Environment Variables
# Copy this file to .env and adjust values as needed
# For Docker deployments, set these in docker-compose.yml or Portainer

# ============================================================================
# Server Configuration
# ============================================================================

# Port the server listens on (default: 3000)
# In Docker, this is the internal container port
PORT=3000

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins for CORS (comma-separated)
# If not set, all origins are allowed (useful for local/internal deployments)
# Example: http://localhost:3010,http://192.168.1.100:3020
# For production, consider restricting to your frontend URL(s)
ALLOWED_ORIGINS=

# ============================================================================
# Storage Configuration
# ============================================================================

# Database directory path (default: /data)
# This is where medstash.db will be stored
# In Docker, should match your volume mount point
DB_DIR=/data

# Receipts storage directory (default: /data/receipts)
# This is where uploaded receipt files are stored
# In Docker, should be within your mounted volume
RECEIPTS_DIR=/data/receipts

# Temporary upload directory (default: /tmp/medstash-uploads)
# Files are uploaded here temporarily before being processed and moved to RECEIPTS_DIR
# Should be writable and have sufficient space
UPLOAD_DIR=/tmp/medstash-uploads

# ============================================================================
# Docker Deployment Example
# ============================================================================
# When deploying with Docker/Portainer, set these as environment variables:
#
# environment:
#   - PORT=3000
#   - DB_DIR=/data
#   - RECEIPTS_DIR=/data/receipts
#   - ALLOWED_ORIGINS=http://your-ip:3020
#
# volumes:
#   - /ssd/docker/medstash-test:/data
